{% extends 'base.html.twig' %}

{% block title %} Anime {% endblock %}
{% block body %}

    {% for anime in animes %}
        <anime>
        {% if app.user %}
        <h2><a class="nav-link"  href="{{path('manga', {'name': anime.name})}}">{{anime.name}}</a></h2>
        {% else %}
        <h2>{{anime.name}}</h2>
        {% endif %}
        <img src="{{ anime.image }}" alt="">
        <div class="metadata"><p>Studio de création : {{anime.studio}}</p></div>
        <div class="content">
        <p>{{anime.resume}}</p>
        <p> Avis de l'équipe : {{anime.avis}} </p>
        <p> Note : {{anime.note}}</p>
        {% if app.user %}
        <a class="btn btn-primary" href="{{path('manga', {'name': anime.name})}}" >Voir</a>
        {% endif %}
        </div>
        </anime>
    {% endfor %}

{% endblock %}