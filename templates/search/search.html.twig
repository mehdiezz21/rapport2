{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title%} Recherche{% endblock %}

{% block body %}
{{ form_start(form) }}


<div class="form-row align-items-end" >
<div class="col">
{{ form_row(form.name) }}
</div>

<div class="col">
<div class="form-group">
<button type="submit" class="btn btn-primary disabled">Rechercher</button>
</div>
</div>
</div>
{{ form_end(form) }}
{% for anime in animes %}
        <anime>
        <h2><a class="nav-link" href="/{{anime.name}}">{{anime.name}}</a></h2>
        <img src="{{ anime.image }}" alt="">
        <div class="metadata"><p>Studio de création : {{anime.studio}}</p></div>
        <div class="content">
        <p>{{anime.resume}}</p>
        <p> Avis de l'équipe : {{anime.avis}} </p>
        <p> Note : {{anime.note}}</p>
        {% if app.user %}
        <a class="btn btn-primary" href="{{path('manga', {'name': anime.name})}}" >Voir</a>
        {% endif %}
        </div>
        </anime>
    {% endfor %}

{% endblock %}