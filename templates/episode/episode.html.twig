{% extends 'base.html.twig' %}

{% block title %} Episode {% endblock %}


{% block body %}
{% if app.user %}
{% for episode in episode %}
        <episode>
        <div class="content">
        <h1>{{episode.anime}} episode {{episode.numero}}:</h1>
        <p>Synopsis: {{episode.resume}}</p>
        <iframe width="560" height="315" src="{{episode.lien}}" 
        frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        {% for suite in suite %}
        <suite>
        <a class="btn btn-primary" href="{{path('episode', {'anime': episode.anime , 'numero': suite.numero})}}" >Episode {{suite.numero}}</a>
        </suite>
        {% endfor %}
        </episode>
{% endfor %}
{% else %}
<p>Connectez-vous pour accéder à la page</p>
{% endif %}

{% endblock %}